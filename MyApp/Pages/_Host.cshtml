@page "/"
@namespace MyApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MyApp</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="MyApp.styles.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script type="text/javascript">
        window.displayAlert = (n) => {
                alert("Attention, vous etes à la valeur "+n+". Quand vous arriverez à 20, le compteur sera inactif.")
        };

        window.askInitial = () => {
            let number = prompt("Saisissez la valeur initiale");
            return number; 
        };

        var counterComponent;
        
        window.StoreCounterComponent = (ref) => {
            if (ref) {
                counterComponent = ref;
            } 
        };
        function Increment3() {
            if (counterComponent) {
                counterComponent.invokeMethodAsync('IncrementByThree');
            }
        }
    </script>
</body>
</html>
 